<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:text="Genre "
        android:textSize="20dp"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="27dp"
        android:layout_marginStart="5dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:text="STATUS: "
        android:id="@+id/textView"
        android:layout_width="720dp"
        android:layout_height="23dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/next_station" />

    <TextView
        android:text="Station: "
        android:textSize="20dp"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="30dp"

        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="718dp"
        android:layout_height="27dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="36dp"
        android:text="URL: "

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3" />

    <ImageButton
        android:id="@+id/update_playlists"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/teal_700"
        android:drawablePadding="10sp"
        android:foregroundGravity="right"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textView"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <ImageButton
        android:id="@+id/genre"
        android:layout_width="230dp"
        android:layout_height="127dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/rounded_corners"
        android:drawablePadding="10dp"
        android:foregroundGravity="center_horizontal"
        app:layout_constraintLeft_toRightOf="@id/next_station"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/up" />

    <ImageButton
        android:id="@+id/next_station"
        android:layout_width="308dp"
        android:layout_height="127dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/rounded_corners"
        android:drawablePadding="10sp"
        android:foregroundGravity="center_horizontal"
        app:layout_constraintLeft_toRightOf="@id/prev_station"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/play1" />

    <ImageButton
        android:id="@+id/prev_station"
        android:layout_width="118dp"
        android:layout_height="127dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/rounded_corners"
        android:drawablePadding="10sp"
        android:foregroundGravity="center_horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

</androidx.constraintlayout.widget.ConstraintLayout>